<% if !@order_item.nil? && @order_item.errors.any? %>
  <div class="alert alert-danger">
    <ul>
    <%= @order_item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if !@buyer.nil? && @buyer.errors.any? %>
  <div class="alert alert-danger">
    <ul>
    <%= @buyer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>



<% if !current_order || current_order.order_status_id != 1 %>
  <p class="text-center">
    There are no items in your shopping cart.  Please <%= link_to "go back", root_path %> and add some items to your cart.
  </p>
<% else %>
  <% @order_items.each do |order_item| %>
    <% if order_item.order.order_status_id === 1 %>
      <%= render 'carts/cart_row', item: order_item.item, order_item: order_item, show_total: true %>
      <% end %>
  <% end %>
<% end %>

