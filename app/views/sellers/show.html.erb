<div class="bill"></div>

<h3 id="tenstore">The Ten Dollar Store </h3>


<div class="item-margin">
		<% if @seller.items.length > 1 %>
				<h3><p>These are <b><%= @seller.first_name %> <%= @seller.last_name %>'s</b> Items for Sale:</p></h3>
		<% end %>

		<% if @seller.items.length == 1 %>
			  	<h3><p>This is <b><%= @seller.first_name %> <%= @seller.last_name %>'s</b> Item for Sale:</p></h3>
		<% end %>

		<% if @seller.items.length == 0 %>
				<h3><p> <b><%= @seller.first_name %> <%= @seller.last_name %></b> Has No Items for Sale:</p></h3>
		<% end %>

		<ul>
			<% @seller.items.each do |item| %>
				<% if item.active %>
					<li>
					<%= link_to item.item_tag, item %>
					<%= item.description %> <button type="button" class="btn btn-info btn-register btn-sm" data-toggle="modal" data-target="#editItemModal-<%=item.id%>">Edit Item</button>
					<%= link_to "Inativate #{item.item_tag}", item_path(item), method: :delete, data: {confirm: "Are you sure you want to permanently inactivate #{item.item_tag}?"} %>

					
						<%= render "sellers/itemform", item: item %>
					</div>
					</li>
				<% end %> <!-- end if item.active -->
				
			<% end %> <!-- end @seller.items.each loop -->
		</ul>

		<nav>
		  
		  
		  <%= link_to "Display All Seller's Items", items_path, {:style=>'color:black;', :class => "css_class"} %>
		</nav>

</div>


				