<div class="bill"></div>
 



<h3 id="tenstore">The Ten Dollar Store </h3>

<button type="button" class="btn btn-info btn-register btn-lg edit-account" data-toggle="modal" data-target="#editAccountModal">Edit Account</button>

<button type="button" class="btn btn-info btn-register btn-lg edit-account" data-toggle="modal" data-target="#addItemModal">Add Item</button>



<div class="item-margin">
      <%= form_tag({controller: "items", action: "index"}, method: "get") do %>
          <%= label_tag(:q, "Search for:") %>
          <%= text_field_tag(:q, nil, :size=>100) %>
          <%= submit_tag("Search") %>
      <% end %><br>
      <h4 id="search-msg">Leave search box empty and press <b>Search</b> to display all items for sale.</h4><br>


      <% if logged_in? %>
            <h2>Items listed for sale by: <%= current_user.first_name %> <%= current_user.last_name %></h2><br>
      <% else %>
        <h2>User Logged Out</h2><br>

      <% end %>


          <% if logged_in? %>
              <ul>
              <% @items.each_slice(3) do |batch| %>
                <% batch.each do |item| %>
                  <div class="batch-items" > 
                      <li>

                        <b>Price:</b> <%= number_to_currency(item.price) %>
                        
                        <div class="item-width"><b>Item:</b> <%= link_to item.item_tag, item %><div><br>
                        
                        <div class="item-width"><b>description:</b> <%= item.description %> <br></div><br>
                  
                        <b>Shipping Cost:</b> <%= number_to_currency(item.shipping_cost) %><br><br>
                        <% if item.image.url != nil %>
                            <%= image_tag item.image.url, size: "100x75"%><br><br>
                        <% end %> 

                      </li>

                  </div>  
                  
                <% end %>

                <hr size ="8px" noshade />
              <% end %>
              </ul>

             <% end %>  <!-- end if logged_in? -->
  </div>

        <div class="modal fade" id="editAccountModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-med">
            <div class="modal-content">
              <div class="modal-header">
                <h2>Edit Account</h2>
              </div>

              <div class="modal-body form-align"> 
                <%= bootstrap_form_for current_user, url: seller_path(current_user), method: :patch  do |f| %>
        
               
                  <%= f.text_field :first_name, label: "First Name", class: "form-font" %>

                  <%= f.text_field :last_name, label: "Last Name", class: "form-font" %>

                  <%= f.text_field :phone, label: "Phone Number", class: "form-font" %>

                  <%= f.text_field :email, label: "Email Address", class: "form-font" %>

                  <%= f.text_field :username, label: "User Name", class: "form-font" %>

                  <%= f.password_field :password, label: "Password", class: "form-font" %>
                  <%= f.submit %>
                <% end %>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div> <!-- end modal content div -->
          </div> <!-- end modal dialog div -->
        </div> <!-- end edit Account modal -->


        <div class="modal fade" id="addItemModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-med">
            <div class="modal-content">
              <div class="modal-header">
                <h2>Add Item</h2>
              </div>

              <div class="modal-body form-align"> 
                <%= bootstrap_form_for :item, url: {:controller=> 'items', :action => "create"}  do |f| %>
                  
                  <%= f.text_field :price, label: "Price", class: "form-font"%><br><br>
                  
                  
                  <%= f.text_area :item_tag , size: "35x3", label: "Item", class: "form-font" %>

                  <%= f.text_area :description, size: "35x3", label: "Description", class: "form-font" %>

                  <%= f.text_field :shipping_cost, label: "Shipping Cost", class: "form-font" %>

                  <%= f.file_field :image %>
                  <%= f.submit %>
                <% end %>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div> <!-- end modal content div -->
          </div> <!-- end modal dialog div -->
        </div> <!-- end add item modal -->

        
